apt-ftparchive packages .>Packages
a=$(sed -e "s/\.\/pool/pool/" Sources)
echo "$a">Sources
mv Sources ./dists/*/main/source/Sources
a=$(sed -e "s/\.\/pool/pool/" Packages)
echo "$a">Packages
mv Packages ./dists/*/main/binary-amd64/Packages
